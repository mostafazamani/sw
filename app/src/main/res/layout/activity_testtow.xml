<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ba.swift.testtow">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btnc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="click" />

        <Button
            android:id="@+id/btnc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click"
            android:layout_alignBaseline="@+id/btnc1"
            android:layout_alignBottom="@+id/btnc1"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnc2"
            android:layout_alignBottom="@+id/btnc2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="click" />

        <Button
            android:id="@+id/btnuc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="unclick" />

        <Button
            android:id="@+id/btnuc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unclick"
            android:layout_alignBaseline="@+id/btnuc1"
            android:layout_alignBottom="@+id/btnuc1"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnuc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnuc2"
            android:layout_alignBottom="@+id/btnuc2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="unclick" />

    </RelativeLayout>

</LinearLayout>
